<configuration status="WARN">
    <appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <!-- ThreadContext: %x = stack, %X = map-->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{[%t] %30logger{2} [%-5level]} %X %msg %throwable%n"/>
        </Console>
    </appenders>
    <loggers>
        <root level="WARN">
            <appender-ref ref="Console"/>
        </root>
