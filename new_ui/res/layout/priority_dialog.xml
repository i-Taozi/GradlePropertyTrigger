<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/abc_dialog_padding_material"
    android:paddingEnd="@dimen/abc_dialog_padding_material"
    android:paddingStart="@dimen/abc_dialog_padding_material"
    android:paddingTop="@dimen/abc_dialog_padding_top_material">
    <LinearLayout
        android:id="@+id/wrapper_priority_veryhigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_priority"
            android:layout_width="@dimen/clickable_item_size"
            android:layout_height="@dimen/clickable_item_size"
            android:layout_gravity="center_vertical"
            android:clickable="false"/>
        <TextView
            style="@style/TextAppearance.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/priority_2"
            android:textColor="?colorTextGrey"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:src="@drawable/ic_priority_veryhigh_24dp"
            android:tint="?colorTextGrey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wrapper_priority_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@id/radio_priority"
            android:layout_width="@dimen/clickable_item_size"
            android:layout_height="@dimen/clickable_item_size"
            android:layout_gravity="center_vertical"
            android:clickable="false"/>
        <TextView
            style="@style/TextAppearance.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/priority_1"
            android:textColor="?colorTextGrey"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:src="@drawable/ic_priority_high_24dp"
            android:tint="?colorTextGrey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wrapper_priority_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@id/radio_priority"
            android:layout_width="@dimen/clickable_item_size"
            android:layout_height="@dimen/clickable_item_size"
            android:layout_gravity="center_vertical"
            android:clickable="false"/>
        <TextView
            style="@style/TextAppearance.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/priority_0"
            android:textColor="?colorTextGrey"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:src="@drawable/ic_priority_none_24dp"
            android:tint="?colorTextGrey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wrapper_priority_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@id/radio_priority"
            android:layout_width="@dimen/clickable_item_size"
            android:layout_height="@dimen/clickable_item_size"
            android:layout_gravity="center_vertical"
            android:clickable="false"/>
        <TextView
            style="@style/TextAppearance.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/priority_m1"
            android:textColor="?colorTextGrey"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:src="@drawable/ic_priority_low_24dp"
            android:tint="?colorTextGrey"/>
    </LinearLayout>
</LinearLayout>