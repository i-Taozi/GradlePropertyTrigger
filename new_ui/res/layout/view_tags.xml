<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_tags_wrapper"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_tags"
            android:drawableStart="@drawable/ic_local_offer_white_18dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="@dimen/padding_drawable"
            android:textAppearance="@style/TextAppearance.Regular.Small"
            android:textColor="?attr/colorTextGrey"
            android:id="@+id/task_tags_title"/>

        <de.azapps.mirakel.new_ui.views.AddTagView
            android:id="@+id/task_tag_add_view"
            android:textAppearance="@style/TextAppearance.Light.Small"
            android:textColor="?attr/colorTextGrey"
            android:singleLine="true"
            android:enabled="false"
            android:clickable="true"
            android:dropDownHeight="192dp"
            android:dropDownVerticalOffset="-244dp"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionNext"
            android:imeActionLabel="@string/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_tag"/>
    </LinearLayout>

</merge>