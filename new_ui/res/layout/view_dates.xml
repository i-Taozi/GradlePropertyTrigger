<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <de.azapps.mirakel.new_ui.views.KeyValueView
        android:id="@+id/dates_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/padding_default_half"
        android:paddingTop="@dimen/padding_default_half" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.azapps.mirakel.new_ui.views.KeyValueView
            android:id="@+id/dates_due"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_default_half"
            android:paddingTop="@dimen/padding_default_half" />

        <de.azapps.mirakel.new_ui.views.KeyValueView
            android:id="@+id/dates_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_default_half"
            android:paddingTop="@dimen/padding_default_half" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.azapps.mirakel.new_ui.views.KeyValueView
            android:id="@+id/dates_due_recurrence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_default_half"
            android:paddingTop="@dimen/padding_default_half" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</merge>