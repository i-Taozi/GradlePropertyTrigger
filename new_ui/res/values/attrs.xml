<resources>

    <declare-styleable name="FloatingActionButton">
        <attr name="drawable" format="integer"/>
        <attr name="btnColor" format="color"/>
        <attr name="shadowRadius" format="float"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="shadowColor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ProgressDone">
        <attr name="progress_value" format="integer"/>
        <attr name="done" format="boolean" />
        <attr name="progress_color" format="color"/>
        <attr name="progress_background_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="TaskName">
        <attr name="strokeSize" format="dimension"/>
        <attr name="strokeMargin" format="dimension" />
        <attr name="isStroked" format="boolean" />
    </declare-styleable>
</resources>
