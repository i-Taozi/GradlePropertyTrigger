    <style name="LightNavbarTheme" parent="LightTheme">
        <item name="android:background">@color/navdrawer_background_light</item>
    </style>

    <style name="DarkNavbarTheme" parent="DarkTheme">
        <item name="android:background">@color/navdrawer_background_dark</item>
    </style>

    <style name="DarkToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
