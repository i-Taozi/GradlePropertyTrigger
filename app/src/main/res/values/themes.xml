    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="alertDialogTheme">@style/FilePickerDialogTheme</item>
        <!-- Make sure toolbar title is white -->
        <item name="nnf_toolbarTheme">@style/FilePickerToolBarTheme</item>
    </style>

    <style name="FilePickerToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="FilePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ThemeHolo" parent="@android:style/Theme.Holo">
        <item name="android:background">@null</item>
        <item name="my_list_selector">?android:attr/activatedBackgroundIndicator</item>
        <item name="my_list_background">@drawable/background_holo_dark</item>

        <item name="viewpager_bg">@android:drawable/dark_header</item>
        <item name="labelAddItemTextColor">@color/labelItemTextColorDark</item>
        <item name="list_item_card_background">@drawable/card_dark</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
        <item name="TaskListItem">@style/TaskListItemDark</item>
        <item name="ListMarginStyle">@style/ListMarginStyleClassic</item>

        <item name="NavDrawerStyle">@style/LeftDrawerStyleDark</item>
    </style>

