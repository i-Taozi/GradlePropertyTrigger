<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="LeftDrawerStyleDark">
        <item name="android:background">@color/googlenow_darkergrey</item>
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:dividerHeight" tools:ignore="PxUsage">1px</item>
    </style>

    <style name="LeftDrawerStyleBlack" parent="@style/LeftDrawerStyleDark">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="LeftDrawerStyleLight" parent="@style/LeftDrawerStyleDark">
        <item name="android:background">@color/googlenow_grey</item>
    </style>

    <style name="LeftDrawerListItemStyleDark">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="LeftDrawerListItemStyleLight" parent="@style/LeftDrawerListItemStyleDark">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="LeftDrawerListItemSecondaryStyleDark" parent="@style/LeftDrawerListItemStyleDark">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="LeftDrawerListItemSecondaryStyleLight" parent="@style/LeftDrawerListItemSecondaryStyleDark">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="ViewPagerStyleDarkGrey">
        <item name="android:background">@android:drawable/dark_header</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ViewPagerStyleDarkTransparent" parent="@style/ViewPagerStyleDarkGrey">
        <item name="android:background">@null</item>
    </style>

    <style name="FragmentHint">
        <item name="android:enabled">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="EditorLayoutStyle">
        <item name="android:layout_marginTop">@dimen/editor_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/editor_vertical_margin_bottom</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="EditorTextStyle">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="linkify">true</item>
        <item name="titleFontFamily">robotocondensed</item>
        <item name="titleFontStyle">bold</item>
        <item name="titleRelativeSize">1.3</item>
    </style>

    <!--
    <style name="ListIndicatorLight">
        <item name="android:background">@drawable/card_light</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="ListIndicatorDark">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>
    -->

    <style name="ActionBarDropDownItem.Dark" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBarDropDownItem.Light" parent="@android:style/Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TaskListItemBlack">
        <item name="android:background">@drawable/tasklist_item_blackclassic_bg</item>
    </style>

    <style name="TaskListItemDark">
        <item name="android:background">@drawable/tasklist_item_darkcard_bg</item>
    </style>

    <style name="TaskListItemLight">
        <item name="android:background">@drawable/tasklist_item_lightcard_bg</item>
    </style>

    <style name="TaskListItemLightClassic">
        <item name="android:background">@drawable/tasklist_item_lightclassic_bg</item>
    </style>

    <style name="ListMarginStyleCard">
        <item name="android:paddingLeft">@dimen/listMarginsPadded</item>
        <item name="android:paddingRight">@dimen/listMarginsPadded</item>
    </style>

    <style name="ListMarginStyleClassic">
        <item name="android:paddingLeft">@dimen/listMargins</item>
        <item name="android:paddingRight">@dimen/listMargins</item>
    </style>

    <style name="ListSpaceDividerStyle">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">4dp</item>
    </style>

    <style name="ListNarrowDividerStyle">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ListOnePxDividerStyle">
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="android:dividerHeight" tools:ignore="PxUsage">1px</item>
    </style>

    <!-- For DashClock Settings -->
    <!-- This base is overridden for larger displays -->
    <style name="DashClockSettings.Theme.Base"
           parent="android:Theme.Holo.Light">
        <item name="isDialog">false</item>
    </style>

    <style name="DashClockSettings.Theme" parent="DashClockSettings.Theme.Base">
        <item name="android:actionBarStyle">@style/DashClockSettings.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/DashClockSettings.ActionButton.Overflow</item>
        <!--<item name="android:actionBarItemBackground">@drawable/ab_solid_DashClockSettingstheme</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <!--<item name="android:windowBackground">@android:color
        /transparent</item>-->
        <!--<item name="android:actionBarWidgetTheme">@android:style/Theme.Holo</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="DashClockSettings.ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!--<item name="android:background">@drawable/ab_solid_DashClockSettingstheme</item>-->
        <item name="android:displayOptions">showTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DashClockSettings.ActionButton.Overflow" parent="android:Widget.Holo.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/ic_action_overflow</item>-->
    </style>

    <style name="GreyableButtonToggle" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall
        </item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>