<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:lines="1"
            android:text="halzhang"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/holo_blue_dark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/news_item_createat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dip"
            android:gravity="right"
            android:lines="1"
            android:text="1 hour age"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_user"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:text="Androodban"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/news_item_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_title"
            android:layout_margin="5dip"
            android:text="subtext"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorLink="@color/holo_blue_dark"/>

        <TextView
            android:id="@+id/news_item_domain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_title"
            android:layout_margin="5dip"
            android:layout_toRightOf="@id/news_item_subtext"
            android:gravity="right"
            android:lines="1"
            android:text="halahznddddddddddddddddddddddddddddddagcom"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
