<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wsAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Below is required as of appcompat v22.1 to avoid a crash, see http://stackoverflow.com/questions/29790070/upgraded-to-appcompat-v22-1-0-and-now-getting-illegalargumentexception-appcompa -->
    <style name="wsAppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Both of these are needed -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="button_primary_raised" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="colorControlHighlight">@color/primaryColorAccent</item>
        <item name="android:colorAccent">@color/primaryButtonDisable</item>
        <item name="android:colorButtonNormal">@color/primaryColor</item>
    </style>

</resources>
