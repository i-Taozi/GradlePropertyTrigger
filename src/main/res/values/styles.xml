<resources>

  <style name="EmptyParent"/>

  <style name="Widget.DFG.ActionBar"
      parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/action_bar_color</item>
  </style>

  <style name="Widget.DFG.ActionBar.MainActivity">
    <!-- Suppress the title and icon for launching animation. -->
    <!--suppress CheckTagEmptyBody -->
    <item name="android:displayOptions"></item>
  </style>


  <style name="DeviceThumbnail">
    <item name="android:scaleType">fitCenter</item>
  </style>

  <style name="DeviceText">
    <item name="android:textSize">32sp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="DeviceText.Title">
    <item name="android:textColor">@color/app_color</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="DeviceText.Info">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="StarToggle">
    <item name="android:background">?android:selectableItemBackground</item>
    <item name="android:scaleType">fitXY</item>
  </style>

  <style name="AboutText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:gravity">center</item>
  </style>

  <style name="AboutText.Header">
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">16dp</item>
  </style>

  <style name="AboutText.Clickable">
    <item name="android:textColor">@color/app_color</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>


  <style name="Widget.DFG.PreferenceActivity.Header" parent="EmptyParent">
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:background">@drawable/header_bg</item>
  </style>

  <style name="Widget.DFG.PreferenceActivity.RowWidget" parent="EmptyParent">
    <item name="android:minHeight">26dp</item>
    <item name="android:layout_marginTop">4dp</item>
  </style>
  <style name="Widget.DFG.PreferenceActivity.RowTitle"
      parent="Widget.DFG.PreferenceActivity.RowWidget">
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Widget.DFG.PreferenceActivity.RowValue"
      parent="Widget.DFG.PreferenceActivity.RowWidget">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>

</resources>