<resources>

  <style name="Widget.DFG.DebugDrawer.Header" parent="EmptyParent">
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:background">@drawable/header_bg</item>
  </style>

  <style name="Widget.DFG.DebugDrawer.RowWidget" parent="EmptyParent">
    <item name="android:minHeight">26dp</item>
    <item name="android:layout_marginTop">4dp</item>
  </style>
  <style name="Widget.DFG.DebugDrawer.RowTitle" parent="Widget.DFG.DebugDrawer.RowWidget">
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Widget.DFG.DebugDrawer.RowValue" parent="Widget.DFG.DebugDrawer.RowWidget">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>
</resources>
