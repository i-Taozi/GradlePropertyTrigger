    <de.azapps.mirakel.settings.custom_views.SwipeLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/speciallist_items"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:minHeight="80dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/speciallist_add_condition"
            style="?android:attr/buttonBarStyle"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/speciallist_add_condition_image"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_plus_white_24dp"
                />
            <Button style="?android:buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:text="@string/add_condition"
                    android:id="@+id/speciallist_add_condition_button"
                    android:background="@android:color/transparent"/>
        </LinearLayout>
    </de.azapps.mirakel.settings.custom_views.SwipeLinearLayout>