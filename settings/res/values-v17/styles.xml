<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">

    <style name="ImageButtonStyleBase">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="ImageButtonStyle" parent="ImageButtonStyleBase"/>

    <style name="ImageButtonStyleText">
        <item name="android:clickable">false</item>
        <item name="android:drawablePadding">@dimen/marginLeft</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular.Small</item>
        <item name="android:textColor">?colorTextWhite</item>
    </style>

    <style name="CardTitleView">
        <item name="android:textAppearance">@style/TextAppearance.Bold</item>
        <item name="android:textColor">?colorTextSettings</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
</resources>