<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/general"        >
        <ListPreference
            android:key="widgetList"
            android:summary="@string/widget_list_summary"
            android:title="@string/widget_list" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/widget_style">
        <de.azapps.mirakel.settings.custom_views.SwitchCompatPreference
            android:defaultValue="false"
            android:key="isDark"
            android:title="@string/dark_theme" />
        <de.azapps.mirakel.settings.custom_views.SwitchCompatPreference
            android:defaultValue="false"
            android:key="showDone"
            android:title="@string/widget_done" />

        <de.azapps.mirakel.settings.ColorPickerPref
            android:key="widgetFontColor"
            android:title="@string/fontcolor" />

        <de.azapps.mirakel.settings.custom_views.SliderPreference
            android:key="widgetTransparency"
            android:title="@string/widget_transparency" />

        <de.azapps.mirakel.settings.custom_views.SwitchCompatPreference
            android:defaultValue="true"
            android:key="widgetDueColors"
            android:title="@string/widget_due_colors" />
        <de.azapps.mirakel.settings.custom_views.SwitchCompatPreference
            android:defaultValue="true"
            android:key="widgetUseGradient"
            android:title="@string/widget_use_gradient" />
    </PreferenceCategory>

</PreferenceScreen>